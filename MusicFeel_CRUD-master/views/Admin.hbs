<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js" integrity="sha256-R4pqcOYV8lt7snxMQO/HSbVCFRPMdrhAFMH+vr9giYI=" crossorigin="anonymous"></script>
    <title>Document</title>
</head>
    <body background="BLUE">
        <nav class="navbar navbar-dark bg-dark">
            <a class="navbar-brand" href="#">ADMINISTRATOR DASHBOARD</a>
        </nav>
        <div class = "container mt-5">
            <form action = "/auth/Dashboard" method = "POST">
            <div class="col text-center">
                    <div class="col text-center">
                        <h1 lass="font-weight-bold">Cantidad de emociones procesadas</h1>
                    </div>
                    <br>
            </div>
                        <table class="table">
                            <thead class="thead-dark">
                                <tr>
                                <th scope="col">#</th>
                                <th scope="col">Mood</th>
                                <th scope="col">Count</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">1</th>
                                    <td>Sad</td>
                                    <td>{{ Sad }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">2</th>
                                    <td>Fear</td>
                                    <td>{{ Fear }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">3</th>
                                    <td>Confused</td>
                                    <td>{{ Confused }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">4</th>
                                    <td>Calm</td>
                                    <td>{{ Calm }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">5</th>
                                    <td>Disgusted</td>
                                    <td>{{ Disgusted }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">6</th>
                                    <td>Surprised</td>
                                    <td>{{ Surprised }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">7</th>
                                    <td>Angry</td>
                                    <td>{{ Angry }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">8</th>
                                    <td>Happy</td>
                                    <td>{{ Happy }}</td>
                                </tr>
                            </tbody>
                        </table>
                        <br>
                        <br>
                        <div class="col text-center">
                        <button type="submit" class="btn btn-dark">Ver estadísticas actuales</button>
                        <br>
                        </div>
                    </div>      
                </div>
            </form>
        </div>
        <br>
        <div class="col text-center">
                <div class="col text-center">
                  <div class="container">
                      <div class="col text-center"></div>
                      <div class="row">
                          <div class="col-lg-8 my-3">
                              <div class="card rounded-0">
                                  <div class="card-header bg-light">
                                    <h6 class="font-weight-bold mb-0">Estadísticas de emociones obtenidas</h6>
                                  </div>
                                  <div class="card-body">
                                    <canvas id="myChart" width="300" height="150"></canvas>
                                  </div>
                              </div>
                          </div>
                      </div>
                      </div>
                  </div>
        </div>

        <script>
            var ctx = document.getElementById('myChart').getContext('2d');
            var myChart = new Chart(ctx, { 
                type: 'bar',
                data: {
                    labels: ['SAD', 'FEAR', 'CONFUSED', 'CALM', 'DISGUSTED', 'SURPRISED', 'ANGRY', 'HAPPY'],
                    datasets: [{
                        label: 'Estados de Animo',
                        data: [{{ Sad }}, {{ Fear }}, {{ Confused }}, {{ Calm }}, {{ Disgusted }}, {{ Surprised }}, {{ Angry }}, {{ Happy }}],
                        backgroundColor: [
                            '#12C9E5',  
                            '#12C9E5',
                            '#12C9E5',
                            '#12C9E5',
                            '#12C9E5',
                            '#12C9E5',
                            '#12C9E5',
                            '#12C9E5'
                        ],
                        maxBarThickness: 30,
                        maxBarLength: 2
                    }]
                },
                options: {
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    }
                }
            });
            
        </script>
    </body>
</html>